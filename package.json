		"@nestjs/common": "10.4.8",
		"@nestjs/core": "10.4.8",
		"@nestjs/platform-fastify": "^10.4.8",
		"reflect-metadata": "0.2.0",
		"rxjs": "7.8.1"
	},
	"devDependencies": {
		"@commitlint/cli": "19.6.0",
		"@commitlint/config-conventional": "19.6.0",
		"@eslint/js": "9.15.0",
		"@mikro-orm/cli": "^6.4.1",
		"@nestjs/cli": "10.4.8",
		"@nestjs/schematics": "10.2.3",
		"@swc/cli": "0.5.1",
		"@swc/core": "1.9.3",
		"@types/node": "^22.10.2",
		"ajv": "^8.17.1",
		"eslint": "9.15.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-n": "^17.15.1",
		"husky": "9.1.7",
		"knip": "^5.41.1",
		"lint-staged": "15.2.10",
		"prettier": "3.3.3",
		"source-map-support": "0.5.21",
		"ts-loader": "9.5.1",
