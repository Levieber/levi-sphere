	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "bun --bun run dist/main.js",
		"server:start:dev": "docker compose watch",
		"server:stop:dev": "docker compose down",
		"server:start:prod": "docker compose -f compose.prod.yml up",
		"server:stop:prod": "docker compose -f compose.prod.yml down",
		"lint": "bun --bun run lint:style:check && bun --bun run lint:quality:check",
		"lint:write": "bun --bun run lint:style:write && bun --bun run lint:quality:write",
		"lint:style:check": "prettier --check \"src/**/*.ts\"",
		"lint:style:write": "prettier --write \"src/**/*.ts\"",
		"lint:quality:check": "eslint \"src/**/*.ts\"",
		"lint:quality:write": "eslint \"src/**/*.ts\" --fix",
		"prepare": "husky || true",
		"deps": "knip"
	},
	"dependencies": {
		"@mikro-orm/core": "^6.4.1",
		"@mikro-orm/migrations": "^6.4.1",
